{
  "compilerOptions": {
    "target": "ES2020",                // Modern JS syntax
    "module": "commonjs",              // Node-friendly module system
    "outDir": "dist",                  // Compiled JS output
    "rootDir": "src",                  // TypeScript source files
    "strict": true,                     // Enable strict type-checking
    "esModuleInterop": true,           // For default import compatibility
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,              // Skip type checks of node_modules
    "resolveJsonModule": true,         // Allow importing JSON files
    "allowJs": false,                  // Only allow TS
    "noEmitOnError": true,             // Prevent emitting JS if errors
    "types": ["node"],                 // Include Node.js types
    "sourceMap": true                  // Optional: helpful for debugging
  },
  "include": ["src/**/*"],             // Include all TS files in src
  "exclude": ["node_modules", "dist"]  // Exclude build output and deps
}
